{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container-fluid bgbody">
    <h1 class="text-center frontwhite">{{ produit.name }}</h1>
    <div class="container bgcont ptb-15">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Nom du produit</th>
                    <td>{{ produit.name }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td><img class="w250max" src="{{ asset('uploads/photo/' ~ produit.photo) }}"</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit.description }}</td>
                </tr>
            </tbody>
        </table>



        <a class="btn"href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

        {{ include('produit/_delete_form.html.twig') }}
        <br>
        <a href="{{ path('produit_index') }}">Retou Ã  la liste des produits</a>
    </div>
</div>
{% endblock %}
