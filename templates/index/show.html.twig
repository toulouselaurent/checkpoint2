{% extends 'base.html.twig' %}

{% block title %}Zoom sur le produit{% endblock %}

{% block body %}
<div class="container-fluid bgbody-show">
    <h1 class="text-center frontwhite">{{ produit.name }}</h1>
    <div class="container bgcont ptb-15">
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom du produit</th>
                    <td>{{ produit.name }}</td>
                </tr>

                <div class="text-center" ><img class="imgshow" src="{{ asset('uploads/photo/' ~ produit.photo) }}"</div>
               

                <tr>
                    <th>Description</th>
                    <td>{{ produit.description }}</td>
                </tr>
            </tbody>
        </table>
        <br>
        <a href="{{ path('index') }}">Retour Ã  l'accueil</a>
    </div>
</div>
{% endblock %}
